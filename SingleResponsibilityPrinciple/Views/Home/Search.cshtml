@model List<SingleResponsibilityPrinciple.Core.Customer>

<html>
<head>
    <title>Search</title>
</head>
<body>
    <h1>Search results</h1>

    @Html.BeginForm("Export", "Home", FormMethod.Post)
    {
        <input type="hidden" name="criteria" value="@ViewBag.Criteria" />
        <input type="hidden" name="searchby" value="@ViewBag.SearchBy" />
        <input type="submit" value="Export" />
    }

    <table border="1" cellpadding="5">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerID</td>
                <td>@item.CompanyName</td>
                <td>@item.ContactName</td>
                <td>@item.Country</td>
            </tr>
        }
    </table>

    <br />
    @Html.ActionLink("Back to search", "Index", "Home")
</body>
</html>